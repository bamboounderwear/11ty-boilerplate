{% if posts and posts.length > 0 %}
  <p>Blog collection count (in partial): {{ posts.length }}</p>
  <div>
    {% for post in posts %}
      <article>
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p>{{ post.data.metaDescription }}</p>
      </article>
    {% endfor %}
  </div>
{% else %}
  <p>No blog posts found.</p>
{% endif %}
