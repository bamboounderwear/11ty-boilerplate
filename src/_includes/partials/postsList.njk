{% if pagination.pages.length > 1 %}
<nav aria-label="Posts Pagination">
  <ul class="pagination">
    {% if pagination.href.previous %}
      <li class="page-item">
        <a href="{{ pagination.href.previous }}" class="page-link">Previous</a>
      </li>
    {% endif %}
    {% for pageNumber in pagination.pages %}
      <li class="page-item{% if pageNumber == pagination.pageNumber %} active{% endif %}">
        <a class="page-link" href="{{ pagination.hrefs[pageNumber] }}">{{ pageNumber + 1 }}</a>
      </li>
    {% endfor %}
    {% if pagination.href.next %}
      <li class="page-item">
        <a href="{{ pagination.href.next }}" class="page-link">Next</a>
      </li>
    {% endif %}
  </ul>
</nav>
{% endif %}

<div class="posts-list">
  {% for post in pagination.items %}
    <article class="post mb-4">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <p>{{ post.data.description }}</p>
    </article>
  {% endfor %}
</div>
