{% if posts and posts.length > 0 %}
  <div class="row">
    {% for post in posts %}
      <div class="col-md-6 mb-4">
        <article class="card h-100">
          {% if post.data.featuredImage %}
            <img src="{{ post.data.featuredImage }}" alt="{{ post.data.title }} Featured Image" class="card-img-top">
          {% endif %}
          <div class="card-body">
            <h2 class="card-title h3">
              <a href="{{ post.url }}" class="text-decoration-none">{{ post.data.title }}</a>
            </h2>
            <p class="card-text">{{ post.data.metaDescription }}</p>
            <div class="text-muted small">{{ post.data.date | date }}</div>
          </div>
        </article>
      </div>
    {% endfor %}
  </div>
{% else %}
  <p>No blog posts found.</p>
{% endif %}
